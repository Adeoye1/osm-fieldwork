<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>parking_survey_mapping_v1</h:title>
    <model odk:xforms-version="1.0.0">
      <instance>
        <data id="parking_survey_mapping_v1">
          <start/>
          <end/>
          <today/>
          <deviceid/>
          <subscriberid/>
          <simserial/>
          <phonenumber/>
          <username/>
          <note/>
          <time_recorded/>
          <geopoint/>
          <congestion_level/>
          <park_along_road/>
          <vehicle_type/>
          <other_vehicle_type/>
          <image/>
          <meta>
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/data/start" type="dateTime"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/data/end" type="dateTime"/>
      <bind jr:preload="date" jr:preloadParams="today" nodeset="/data/today" type="date"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/data/deviceid" type="string"/>
      <bind jr:preload="property" jr:preloadParams="subscriberid" nodeset="/data/subscriberid" type="string"/>
      <bind jr:preload="property" jr:preloadParams="simserial" nodeset="/data/simserial" type="string"/>
      <bind jr:preload="property" jr:preloadParams="phonenumber" nodeset="/data/phonenumber" type="string"/>
      <bind jr:preload="property" jr:preloadParams="username" nodeset="/data/username" type="string"/>
      <bind nodeset="/data/note" readonly="true()" type="string"/>
      <bind nodeset="/data/time_recorded" required="true()" type="dateTime"/>
      <bind nodeset="/data/geopoint" required="true()" type="geopoint"/>
      <bind nodeset="/data/congestion_level" required="true()" type="string"/>
      <bind nodeset="/data/park_along_road" relevant="selected ( /data/congestion_level ,'empty') or selected ( /data/congestion_level ,'low') or selected ( /data/congestion_level ,'moderate')" required="true()" type="string"/>
      <bind nodeset="/data/vehicle_type" required="true()" type="string"/>
      <bind nodeset="/data/other_vehicle_type" relevant=" /data/vehicle_type  = 'other'" required="true()" type="string"/>
      <bind nodeset="/data/image" type="binary"/>
      <bind jr:preload="uid" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/data/note">
      <label>This survey is for collecting information on official parking lots for congestion and use</label>
    </input>
    <input appearance="none" ref="/data/time_recorded">
      <label>Please enter day and time when the survey was taken</label>
    </input>
    <input ref="/data/geopoint">
      <label>Please take a GPS point of the parking lot</label>
      <hint>Please take a GPS point</hint>
    </input>
    <select1 ref="/data/congestion_level">
      <label>What is the congestion level?</label>
      <item>
        <label>Empty</label>
        <value>empty</value>
      </item>
      <item>
        <label>Low</label>
        <value>low</value>
      </item>
      <item>
        <label>Moderate</label>
        <value>moderate</value>
      </item>
      <item>
        <label>Full</label>
        <value>full</value>
      </item>
      <item>
        <label>Overflowing</label>
        <value>overflowing</value>
      </item>
    </select1>
    <select1 ref="/data/park_along_road">
      <label>Are vehicles informally parked along the road?</label>
      <item>
        <label>Yes</label>
        <value>yes</value>
      </item>
      <item>
        <label>No</label>
        <value>no</value>
      </item>
    </select1>
    <select ref="/data/vehicle_type">
      <label>Types of vehicles</label>
      <item>
        <label>Trucks With Products</label>
        <value>trucks_with_products</value>
      </item>
      <item>
        <label>Taxis With Products</label>
        <value>taxis_with_products</value>
      </item>
      <item>
        <label>Kehkeh</label>
        <value>kehkeh</value>
      </item>
      <item>
        <label>Motorbikes</label>
        <value>motorbikes</value>
      </item>
      <item>
        <label>Other</label>
        <value>other</value>
      </item>
    </select>
    <input ref="/data/other_vehicle_type">
      <label>You said "other", please type in other vehicle type</label>
    </input>
    <upload appearance="none" mediatype="image/*" ref="/data/image">
      <label>Please take a photo of the delivering truck</label>
    </upload>
  </h:body>
</h:html>
