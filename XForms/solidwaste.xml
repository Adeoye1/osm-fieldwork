<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>solidwaste_mapping_v1</h:title>
    <model odk:xforms-version="1.0.0">
      <instance>
        <data id="solidwaste_mapping_v1">
          <start/>
          <end/>
          <today/>
          <username/>
          <phonenumber/>
          <deviceid/>
          <title/>
          <osm_solidwaste/>
          <meta>
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/data/start" type="dateTime"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/data/end" type="dateTime"/>
      <bind jr:preload="date" jr:preloadParams="today" nodeset="/data/today" type="date"/>
      <bind jr:preload="property" jr:preloadParams="username" nodeset="/data/username" type="string"/>
      <bind jr:preload="property" jr:preloadParams="phonenumber" nodeset="/data/phonenumber" type="string"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/data/deviceid" type="string"/>
      <bind nodeset="/data/title" readonly="true()" type="string"/>
      <bind nodeset="/data/osm_solidwaste" required="true()" type="binary"/>
      <bind jr:preload="uid" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/data/title">
      <label>MM Solid Waste Form</label>
      <hint>This is a MM solid waste survey used to collect information on solid waste</hint>
    </input>
    <upload mediatype="osm/*" ref="/data/osm_solidwaste">
      <label>MM Solid Waste Form</label>
      <hint>Please select and tag a feature appropriately.</hint>
      <tag key="addr:city">
        <label>Name of city</label>
        <item>
          <label>Monrovia</label>
          <value>monrovia</value>
        </item>
      </tag>
      <tag key="addr:community">
        <label>Name of community</label>
        <item>
          <label>Duala</label>
          <value>duala</value>
        </item>
        <item>
          <label>New Kru Town</label>
          <value>new kru town</value>
        </item>
        <item>
          <label>Tweh Farm</label>
          <value>tweh farm</value>
        </item>
      </tag>
      <tag key="addr:street">
        <label>Name of street</label>
      </tag>
      <tag key="amenity">
        <label>What feature is this? (NB: toilets mapped only for public toilets)</label>
        <item>
          <label>Toilets</label>
          <value>toilets</value>
        </item>
        <item>
          <label>Waste disposal</label>
          <value>waste_disposal</value>
        </item>
        <item>
          <label>Recycling</label>
          <value>recycling</value>
        </item>
        <item>
          <label>Waste basket</label>
          <value>waste_basket</value>
        </item>
        <item>
          <label>Waste dump site</label>
          <value>waste_dump_site</value>
        </item>
      </tag>
      <tag key="name">
        <label>Name of this feature (if any)</label>
      </tag>
      <tag key="toilets:num_chambers">
        <label>How many toilet chambers are there?</label>
      </tag>
      <tag key="toilets:disposal">
        <label>What is the mode of disposal?</label>
        <item>
          <label>Flush</label>
          <value>flush</value>
        </item>
        <item>
          <label>Pitlatrine</label>
          <value>pitlatrine</value>
        </item>
        <item>
          <label>Bucket</label>
          <value>bucket</value>
        </item>
        <item>
          <label>Chemical</label>
          <value>chemical</value>
        </item>
      </tag>
      <tag key="toilets:wheelchair">
        <label>Is the feature accessible by wheelchair?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
        <item>
          <label>Limited</label>
          <value>limited</value>
        </item>
      </tag>
      <tag key="toilets:handwashing">
        <label>Is there handwashing equipments?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </tag>
      <tag key="toilets:access">
        <label>How is the toilet accessible?</label>
        <item>
          <label>Public</label>
          <value>public</value>
        </item>
        <item>
          <label>Customers</label>
          <value>customers</value>
        </item>
        <item>
          <label>Permissive (private but access is not restricted)</label>
          <value>permissive (private_but_access_not_restricted)</value>
        </item>
      </tag>
      <tag key="fee">
        <label>Do people pay fee to use this toilet?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </tag>
      <tag key="operational_status">
        <label>What is the status of this feature?</label>
        <item>
          <label>Operational</label>
          <value>operational</value>
        </item>
        <item>
          <label>Closed</label>
          <value>closed</value>
        </item>
        <item>
          <label>Needs maintenance</label>
          <value>needs_maintenance</value>
        </item>
      </tag>
      <tag key="operator">
        <label>Name of operator (if any)</label>
      </tag>
      <tag key="operator:type">
        <label>What type of operator is this?</label>
        <item>
          <label>Government</label>
          <value>government</value>
        </item>
        <item>
          <label>NGO</label>
          <value>ngo</value>
        </item>
        <item>
          <label>Community</label>
          <value>community</value>
        </item>
        <item>
          <label>Religious</label>
          <value>religious</value>
        </item>
        <item>
          <label>Public</label>
          <value>public</value>
        </item>
        <item>
          <label>Private individual</label>
          <value>private_individual</value>
        </item>
      </tag>
      <tag key="opening_hours">
        <label>Days/times of opening this feature</label>
        <item>
          <label>24/7</label>
          <value>24/7</value>
        </item>
        <item>
          <label>Mo-Sa 08:00-18:00</label>
          <value>Mo-Sa 08:00-18:00</value>
        </item>
        <item>
          <label>Mo-Sa 09:00-17:00</label>
          <value>Mo-Sa 09:00-17:00</value>
        </item>
        <item>
          <label>Mo-Sa 09:00-18:00</label>
          <value>Mo-Sa 09:00-18:00</value>
        </item>
        <item>
          <label>Mo-Fr 09:00-17:00</label>
          <value>Mo-Fr 09:00-17:00</value>
        </item>
        <item>
          <label>Mo-Su 09:00-21:00</label>
          <value>Mo-Su 09:00-21:00</value>
        </item>
        <item>
          <label>Mo-Fr 08:00-18:00; Sa-Su 08:00-15:00</label>
          <value>Mo-Fr 08:00-18:00; Sa-Su 08:00-15:00</value>
        </item>
        <item>
          <label>By Appointment Only</label>
          <value>by_appointment</value>
        </item>
      </tag>
      <tag key="comment">
        <label>Any other comments about this feature</label>
      </tag>
    </upload>
  </h:body>
</h:html>
