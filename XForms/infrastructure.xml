<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>infrastructure_mapping_v1</h:title>
    <model odk:xforms-version="1.0.0">
      <instance>
        <data id="infrastructure_mapping_v1">
          <start/>
          <end/>
          <today/>
          <username/>
          <phonenumber/>
          <deviceid/>
          <title/>
          <osm_infrastructure/>
          <meta>
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/data/start" type="dateTime"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/data/end" type="dateTime"/>
      <bind jr:preload="date" jr:preloadParams="today" nodeset="/data/today" type="date"/>
      <bind jr:preload="property" jr:preloadParams="username" nodeset="/data/username" type="string"/>
      <bind jr:preload="property" jr:preloadParams="phonenumber" nodeset="/data/phonenumber" type="string"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/data/deviceid" type="string"/>
      <bind nodeset="/data/title" readonly="true()" type="string"/>
      <bind nodeset="/data/osm_infrastructure" required="true()" type="binary"/>
      <bind jr:preload="uid" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/data/title">
      <label>MM infrastructure Form</label>
      <hint>This is a MM infrastructure survey used to collect information on solid waste</hint>
    </input>
    <upload mediatype="osm/*" ref="/data/osm_infrastructure">
      <label>MM infrastructure Form</label>
      <hint>Please select and tag a feature appropriately.</hint>
      <tag key="addr:city">
        <label>Name of city</label>
        <item>
          <label>Monrovia</label>
          <value>monrovia</value>
        </item>
      </tag>
      <tag key="addr:community">
        <label>Name of community</label>
        <item>
          <label>Duala</label>
          <value>duala</value>
        </item>
        <item>
          <label>New Kru Town</label>
          <value>new kru town</value>
        </item>
        <item>
          <label>Tweh Farm</label>
          <value>tweh farm</value>
        </item>
      </tag>
      <tag key="addr:street">
        <label>Name of street</label>
      </tag>
      <tag key="amenity">
        <label>What feature is this?</label>
        <item>
          <label>Car Parking</label>
          <value>parking</value>
        </item>
        <item>
          <label>Bicycle parking</label>
          <value>bicycle_parking</value>
        </item>
        <item>
          <label>Motorcycle parking</label>
          <value>motorcycle_parking</value>
        </item>
      </tag>
      <tag key="name">
        <label>Name of this feature (if any)</label>
      </tag>
      <tag key="fee">
        <label>Do people pay fee to use this feature?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </tag>
      <tag key="operator">
        <label>Name of operator (if any)</label>
      </tag>
      <tag key="operator:type">
        <label>What type of operator is this?</label>
        <item>
          <label>Government</label>
          <value>government</value>
        </item>
        <item>
          <label>NGO</label>
          <value>ngo</value>
        </item>
        <item>
          <label>Community</label>
          <value>community</value>
        </item>
        <item>
          <label>Religious</label>
          <value>religious</value>
        </item>
        <item>
          <label>Public</label>
          <value>public</value>
        </item>
        <item>
          <label>Private</label>
          <value>private</value>
        </item>
        <item>
          <label>Consortium</label>
          <value>consortium</value>
        </item>
        <item>
          <label>Cooperative</label>
          <value>cooperative</value>
        </item>
      </tag>
      <tag key="phone">
        <label>Phone number of the operator</label>
      </tag>
      <tag key="opening_hours">
        <label>Days/times of opening this feature</label>
        <item>
          <label>24/7</label>
          <value>24/7</value>
        </item>
        <item>
          <label>Mo-Sa 08:00-18:00</label>
          <value>Mo-Sa 08:00-18:00</value>
        </item>
        <item>
          <label>Mo-Sa 09:00-17:00</label>
          <value>Mo-Sa 09:00-17:00</value>
        </item>
        <item>
          <label>Mo-Sa 09:00-18:00</label>
          <value>Mo-Sa 09:00-18:00</value>
        </item>
        <item>
          <label>Mo-Fr 09:00-17:00</label>
          <value>Mo-Fr 09:00-17:00</value>
        </item>
        <item>
          <label>Mo-Su 09:00-21:00</label>
          <value>Mo-Su 09:00-21:00</value>
        </item>
        <item>
          <label>Mo-Fr 08:00-18:00; Sa-Su 08:00-15:00</label>
          <value>Mo-Fr 08:00-18:00; Sa-Su 08:00-15:00</value>
        </item>
        <item>
          <label>By Appointment Only</label>
          <value>by_appointment</value>
        </item>
      </tag>
      <tag key="comment">
        <label>Any other comments about this feature</label>
      </tag>
    </upload>
  </h:body>
</h:html>
